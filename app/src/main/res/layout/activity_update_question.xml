<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/cbackground"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="7dp"
        android:id="@+id/back"
        android:src="@drawable/cback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="#82615d5d"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="UPDATE THE QUESTION."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/questionlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textSize="15dp"
                    android:id="@+id/questi"
                    android:text="QUESTION: "
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout

                    android:layout_weight="2.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/roundcorners"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:padding="10dp"
                        android:background="@null"
                        android:textSize="15dp"

                        android:id="@+id/eactualquestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/op1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option 1: "
                    android:textStyle="bold" />
                <RelativeLayout

                    android:layout_weight="2.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/roundcorners"
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:padding="10dp"
                        android:background="@null"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:id="@+id/eactualoption1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:text="Option 2: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout

                    android:layout_weight="2.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/roundcorners"
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:padding="10dp"
                        android:background="@null"

                        android:textSize="15dp"
                        android:singleLine="true"
                        android:id="@+id/eactualoption2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="Option 3: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout

                    android:layout_weight="2.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/roundcorners"
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:padding="10dp"
                        android:background="@null"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:id="@+id/eactualoption3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="Option 4: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout

                    android:layout_weight="2.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/roundcorners"
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:padding="10dp"
                        android:background="@null"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:id="@+id/eactualoption4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="Correct: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout

                    android:layout_weight="2.5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/roundcorners"
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:padding="10dp"
                        android:background="@null"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:id="@+id/ecorrectanswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/updatequestion"
        android:background="#7cd9d2d2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>



