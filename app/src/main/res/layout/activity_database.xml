<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cbackground"
    tools:context=".Database">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:background=
            "?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:id="@+id/back"
        android:layout_marginLeft="5dp"
        android:src="@drawable/cback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
       android:text="Create a Quiz"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:background="#805c5b5b"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Question : "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout

            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundcorners"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:padding="10dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:hint="Enter the Question"
                android:id="@+id/question"
                android:textColorHint="#9a514f4f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Option 1: "
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundcorners"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:padding="10dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:hint="Enter Option 1"
                android:singleLine="true"
                android:id="@+id/option1"
                android:textColorHint="#9a514f4f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Option 2: "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout

            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundcorners"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:padding="10dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:hint="Enter Option 2"
                android:singleLine="true"
                android:id="@+id/option2"
                android:textColorHint="#9a514f4f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Option 3: "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundcorners"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:padding="10dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:hint="Enter option 3"
                android:singleLine="true"
                android:id="@+id/option3"
                android:textColorHint="#9a514f4f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Option 4: "
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundcorners"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:padding="10dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:hint="Enter Option 4"
                android:singleLine="true"
                android:id="@+id/option4"
                android:textColorHint="#9a514f4f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Correct Answer: "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout

            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundcorners"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:padding="10dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:hint="Enter the correct answer"
                android:singleLine="true"
                android:id="@+id/coption"
                android:textColorHint="#9a514f4f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Set Time: "
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RelativeLayout

            android:layout_weight="2.5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/roundcorners"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:padding="10dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:hint="Set The Time"
                android:singleLine="true"
                android:id="@+id/timeofquiz"
                android:textColorHint="#9a514f4f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

        <android.support.v7.widget.CardView

            android:layout_marginBottom="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/submit"
            app:cardCornerRadius="7dp"
            android:background="#828f8888"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="175dp"
            android:layout_height="30dp">
        <TextView
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Submit"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>
</ScrollView>